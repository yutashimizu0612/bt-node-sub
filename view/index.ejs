<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"
    />
    <style>
      .wrapper {
        margin: 0 auto;
        width: 600px;
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <table>
        <tr>
          <th>id</th>
          <th>name</th>
          <th>description</th>
        </tr>
        <% tests.forEach((test) => { %>
        <tr>
          <td><%- test.id %></td>
          <td><%- test.name %></td>
          <td><%- test.description %></td>
        </tr>
        <% }); %>
      </table>
    </div>
  </body>
</html>
